<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.example.springwork.entity.Activity" table="activity" schema="javaee">
        <id name="activityId" column="activity_id"/>
        <property name="description" column="description"/>
        <property name="isPublic" column="is_public"/>
        <property name="date" column="date"/>
        <property name="name" column="name"/>
        <property name="clubId" column="club_id"/>
        <property name="picture" column="picture"/>
        <property name="personNumber" column="person_number"/>
    </class>
</hibernate-mapping>